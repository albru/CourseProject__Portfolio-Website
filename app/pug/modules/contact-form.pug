.my-works__contacts-container
  .my-works__contacts-form-wrapper
    .blur
    form.my-works__contacts-form
      fieldset.my-works__contacts-form-fieldset
        .my-works__contacts-form-title
          h2.my-works__contacts-form-title-item Связаться со мной
        input.my-works__contacts-form-login(type='text', name='login', id='login', placeholder="Имя")
        input.my-works__contacts-form-email(type='email', id='email', name='email', placeholder="Email")
        textarea.my-works__contacts-form-text(id='contacts-form-text', name="comment", placeholder='Ваше сообщение')
        .my-works__contacts-buttons
          .my-works__contacts-buttons--left
            button.my-works__contacts-submit(type="submit") Отправить
          .my-works__contacts-buttons--right
            input(type='reset', value="Очистить").my-works__contacts-clear


